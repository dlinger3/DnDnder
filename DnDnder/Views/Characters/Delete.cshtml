@model Tavern.Models.Character
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<br />
<br />
<h3>Are you sure you want to delete @Model.Name?</h3>
<div>
    <h4>You will be removed from any campaigns you have joined with @Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Class)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Class)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Race)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Race)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Alignment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Alignment)
        </dd>
    </dl>
    <dl>
        <dt class = "align-content-center">
            @Html.DisplayNameFor(model => model.Bio)
        </dt>
        <hr />
        <dd class = "align-content-lg-start">
            @Html.DisplayFor(model => model.Bio)
        </dd>
    </dl>
    <br />
    <hr />
    <br />
    <form asp-action="Delete" asp-controller="Characters">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <input type="button" class="btn btn-primary" value="Back to List" onclick="location.href='@Url.Action("Index","Characters")'" />
    </form>
</div>
