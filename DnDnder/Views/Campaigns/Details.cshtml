@model Tavern.Models.Campaign
@using Tavern.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@Model.CampaignName</h1>
<div>
    <h4>Details</h4>
    <hr />
    <div class="float-container">
        <div class="float-left-child">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.CampaignName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.CampaignName)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.WorldName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.WorldName)
                </dd>
            </dl>
        </div>
        <div class="float-right-child">
            <img src="@Util.getCampaignImageById(@Model.CampaignImg)" class="creation-img">
        </div>
    </div>

    <dl>
        <dt class = "align-content-center">
            <p><b>Campaign Details</b></p>
        </dt>
        <hr />
        <dd class = "align-content-lg-start">
            @Html.DisplayFor(model => model.Details)
        </dd>

    </dl>
</div>
<div>
    <input type="button" class="btn btn-primary" value="Edit" onclick="location.href='@Url.Action("Edit","Campaigns", new{id = @Model.Id})'" /> |
    <input type="button" class="btn btn-primary" value="Back To List" onclick="location.href='@Url.Action("Index","Campaigns")'" />
</div>
