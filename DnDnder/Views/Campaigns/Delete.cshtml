@model Tavern.Models.Campaign
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Campaign</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CampaignName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CampaignName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WorldName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorldName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Details)
        </dd>
    </dl>
    
    <form asp-controller="Campaigns" asp-action="Delete">
        <input type="hidden" asp-for="Id" asp-controller="Campaigns" asp-action="DeleteConfirmed"/>
        <input type="submit" value="Delete" class="btn btn-danger"> |
        <div>
            <input type="button" class="btn btn-primary" value="Back To List" onclick="location.href='@Url.Action("Index","Campaigns")'" />
        </div>
    </form>
</div>
