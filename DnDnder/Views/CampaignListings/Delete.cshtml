@model Tavern.Models.CampaignListing
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CampaignListing</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Campaign)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Campaign.CampaignName)
        </dd>
    </dl>
    <form asp-controller="CampaignListings" asp-action="Delete">
        <input type="hidden" asp-for="Id" asp-controller="CampaignListings" asp-action="DeleteConfirmed"/>
        <input type="submit" value="Delete" class="btn btn-danger"> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
