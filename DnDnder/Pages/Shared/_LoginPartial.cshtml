@using Microsoft.AspNetCore.Identity
@using Tavern.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a> 
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Campaigns" asp-action="Index">Campaigns</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Characters" asp-action="Index">Characters</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="CampaignListings" asp-action="Index">Campaign Listings</a> 
            </li>
            <li class="nav-item">
                <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage Account</a>
            </li>
        </ul>
    </div>
    <li class="nav-item">
        <form class="nav-link text-dark background-hover" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{

     <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a> 
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
